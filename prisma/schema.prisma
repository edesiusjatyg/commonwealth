generator client {
  provider = "prisma-client-js"
  output   = "./../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String         @id @default(cuid())
  email         String?        @unique
  passwordHash  String?
  baseSocialId  String?        @unique
  eoaAddress    String?        @unique
  encryptedKey  String?
  onboarded     Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  contacts      Contact[]
  notifications Notification[]
  wallets       Wallet[]
}

model Wallet {
  id             String         @id @default(cuid())
  address        String         @unique
  name           String
  userId         String
  dailyLimit     Decimal        @default(0)
  emergencyEmail String[]
  spendingToday  Decimal        @default(0)
  approvalTokenHash String?
  approvalExpiresAt DateTime?
  createdAt      DateTime       @default(now())
  transactions   Transaction[]
  user           User           @relation(fields: [userId], references: [id])
  yieldHistory   YieldHistory[]
}

model Transaction {
  id          String          @id @default(cuid())
  walletId    String
  type        TransactionType
  amount      Decimal
  category    String?
  description String?
  createdAt   DateTime        @default(now())
  wallet      Wallet          @relation(fields: [walletId], references: [id])
}

model YieldHistory {
  id        String   @id @default(cuid())
  walletId  String
  amount    Decimal
  timestamp DateTime @default(now())
  wallet    Wallet   @relation(fields: [walletId], references: [id])
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  title     String
  message   String
  type      NotificationType
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())
  user      User             @relation(fields: [userId], references: [id])
}

model user_insights {
  id               Int       @id @default(autoincrement())
  user_id          String    @db.VarChar(255)
  portfolio_tokens Json?     @db.Json
  insight_type     String    @db.VarChar(50)
  insight_text     String    @db.VarChar(2000)
  confidence       Int?
  insight_metadata Json?     @db.Json
  created_at       DateTime? @db.Timestamp(6)
  updated_at       DateTime? @db.Timestamp(6)

  @@index([created_at], map: "ix_user_insights_created_at")
  @@index([id], map: "ix_user_insights_id")
  @@index([user_id], map: "ix_user_insights_user_id")
}

model Contact {
  id         String   @id @default(cuid())
  userId     String
  name       String
  ethAddress String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  YIELD
}

enum NotificationType {
  DAILY_LIMIT_ALERT
  DEPOSIT_SUCCESS
  WITHDRAWAL_SUCCESS
  EMERGENCY_APPROVAL
  REWARD_RECEIVED
  TOKEN_PURCHASE
  TOKEN_SALE
}
